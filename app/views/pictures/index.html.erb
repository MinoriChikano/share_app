<p><%= notice %></p>

<%= link_to '新しく投稿する', new_picture_path %>

<% @pictures.each do |picture| %>
  <div class = "index">
  <table>
  <br>
  <tr>
    <th>name:</th>
    <td><%= picture.user.name %></td>
    <th>contents:</th>
    <td><%= picture.content %></td>
    <th>詳細👉</th>
    <td><%= link_to '📷', picture_path(picture.id) %></td>
    <% if picture.user == current_user %>
      <td><%= link_to "✒️EDIT🖊️", edit_picture_path(picture.id) %></td>
      <td><%= link_to '❌DELETE❌', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
  </tr>
  </table>
  </div>
<% end %>